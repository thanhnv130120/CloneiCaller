<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="270" android:endColor="@color/colorWhite" android:startColor="@color/colorWhite" />
            <corners android:radius="25dp" />
            <size android:width="50dp" android:height="25dp" />
            <stroke android:width="1dp" android:color="@color/colorDarkGray" />

        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="270" android:endColor="@color/colorLavender" android:startColor="@color/colorLavender" />
            <corners android:radius="25dp" />
            <size android:width="50dp" android:height="25dp" />
            <stroke android:width="1dp" android:color="@color/colorPurple" />

        </shape>
    </item>
</selector>